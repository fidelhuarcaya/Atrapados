#:kivy 1.11.0

ScreenManagement:
    Screen1:
        id: Screen1
    MainLayout:
        id: Screen2

<Screen1>:
    name: "Screen_1"
    id: Screen1
    canvas.before:
        Color:
            rgba: 216 / 255., 195 / 255., 88 / 255., 1
        Rectangle:
            pos:self.pos 
            size:self.size
            source:'fondo.jpg'    
    BoxLayout:
        orientation: 'vertical'
        Label:
            text: "Bienvenido, click en empezar y diviertéte ganando a la máquina"
            
            font_size:25
            
            pos_hint: {'center_x': .5, 'center_y':0.5}
        Label:
            text: "Tu nombre(Opcional)"
            font_size:25
            size: 500, 70
            size_hint: None, None
            pos_hint: {'center_x': .33, 'center_y':0.5}
        TextInput:
            id: nombre
            hint_text: "Juan"
            font_size:40
            size: 500, 70
            size_hint: None, None
            pos_hint: {'center_x': .5, 'center_y':0.5}
        Label:
           
            size: 20,50
            size_hint: None, None
            pos_hint: {'center_x': .5, 'center_y':0.5}            
        Button:
            text: 'Empezar a jugar'
            font_size: 20
            background_color: .58, 2.21, .33, 1
            size: 500, 70
            size_hint: None, None
            pos_hint: {'center_x': .5, 'center_y':0.5}
            on_release:
                root.update_info()
                root.manager.current = "MainLayout"
        Label:
            
            size_hint: None, None
            pos_hint: {'center_x': .5, 'center_y':0.5}
